{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "./dist",
		"noImplicitAny": false,
		"declaration": true
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"demo/app/app.module.ts",
		"demo/app/app.component.ts"
	]
}